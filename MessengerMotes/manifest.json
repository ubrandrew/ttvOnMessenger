{
    "name": "MessengerMotes",
    "version": "1.0",
    "description": "TTV and BTTV emotes on facebook messenger and facebook chat!",
    "content_scripts": [
        {
            "matches": [
                "*://*.messenger.com/*",
                "*://*.facebook.com/*"
            ],
            "js": [
                "myscript.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        "images/*",
        "bttv_mappings.json",
        "ttv_mappings.json"
    ],
    "permissions": [
        "storage"
    ],
    "manifest_version": 2
}