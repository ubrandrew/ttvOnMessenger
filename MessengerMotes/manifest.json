{
    "name": "MessengerMotes",
    "version": "1.1",
    "description": "TTV and BTTV emotes on facebook messenger and facebook chat!",
    "icons": {
        "16": "icons/mm16.png",
        "24": "icons/mm24.png",
        "32": "icons/mm32.png",
        "48": "icons/mm48.png",
        "64": "icons/mm64.png",
        "128": "icons/mm128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.messenger.com/*"
            ],
            "js": [
                "emoteInjector.js"
            ],
            "css": [
                "tooltip.css"
            ]
        }
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        "bttv_mappings.json",
        "ttv_mappings.json",
        "ffz_mappings.json"
    ],
    "permissions": [
        "storage"
    ],
    "manifest_version": 2
}